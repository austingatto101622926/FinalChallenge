@model IEnumerable<FinalChallenge.Models.Game>

@{
    ViewBag.Title = "Previous Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Previous</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Venue)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.GameId }) | 
            @Html.ActionLink("Add Payee", "AddPayee", new { id = item.GameId })
        </td>
    </tr>
}

</table>
